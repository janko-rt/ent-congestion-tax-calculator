<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet  author="janko"  id="2025-07-28-02">
        <createSequence  dataType="BIGINT"
                         incrementBy="1"
                         schemaName="public"
                         sequenceName="city_seq"
                         startValue="1"/>
    </changeSet>
    <changeSet author="janko" id="2025-07-28-03" >
        <createTable tableName="city">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="city_pk"/>
            </column>
            <column name="name" type="varchar(128)" >
                <constraints nullable="false" />
            </column>
            <column name="currency" type="varchar(128)" >
                <constraints nullable="false" />
            </column>
            <column name="zone_id" type="varchar(128)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2025-07-29-01" author="janko">
        <dropColumn tableName="city" columnName="zone_id"></dropColumn>
    </changeSet>
</databaseChangeLog>